<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <import type="com.example.listofemployeessqlite.persistence.EmployeesModel"/>
    <variable
        name="itemModel"
        type="EmployeesModel" />
</data>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">
    <RelativeLayout
        android:id="@+id/relativeLayoutBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F80000">
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linerLayoutForeground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/holo_green_light"
        android:padding="12dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/imageViewDeleteEmployees"
            android:text='@{itemModel.name + "  ("+itemModel.gender+")"}'
            />
        <TextView
            android:id="@+id/textViewAge"
            android:layout_below="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageViewDeleteEmployees"
            android:layout_weight="4"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="@{String.valueOf(itemModel.age)}"
            />

        <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAge"
            android:layout_toLeftOf="@+id/imageViewDeleteEmployees"
            android:layout_weight="4"
            android:autoLink="phone"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text='@{String.valueOf(itemModel.phone)}'
            />
        <ImageView
            android:id="@+id/imageViewDeleteEmployees"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_delete"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
</layout>